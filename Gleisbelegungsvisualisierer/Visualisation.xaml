<UserControl x:Class="Gleisbelegungsvisualisierer.Visualisation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gleisbelegungsvisualisierer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="4"/>
        </Style>

        <Style x:Key="ModernScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <!-- Top Controls -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <ComboBox Name="ComboBoxOperatingSites" 
                      Grid.Column="0" 
                      Style="{StaticResource ModernComboBox}"
                      Margin="0,0,20,0" 
                      FontSize="20" 
                      VerticalAlignment="Center"/>
            
            <Button Name="ButtonAnalyse" 
                    Grid.Column="1"
                    Style="{StaticResource ModernButton}"
                    Click="ButtonAnalyse_Click" 
                    Content="Analysieren" 
                    Margin="0,0,20,0"
                    FontSize="20"/>
            
            <ProgressBar Name="ProgressBar" 
                        Grid.Column="2" 
                        Style="{StaticResource ModernProgressBar}"
                        VerticalAlignment="Center"/>
        </Grid>

        <!-- Content Area -->
        <ScrollViewer Name="Test" 
                      Grid.Row="1" 
                      Style="{StaticResource ModernScrollViewer}"
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Name="ContentPanel" 
                        Orientation="Horizontal"
                        Margin="10"/>
        </ScrollViewer>
    </Grid>
</UserControl>
